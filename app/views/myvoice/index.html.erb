<h1>MyVoice Survey Status</h1>

<table>
  <thead>
    <tr>
      <th>Region</th>
      <th>% Complete</th>
      <th colspan="15"></th>
    </tr>
  </thead>

  <tbody>
    <% @region_uri = @region_uri.sort_by{|hash| hash["percent"]}.reverse%>
    <% @region_uri.each do |item| %>
    <% a = item.values %>
      <tr>
        <td><%= a[0] %></td>
        <td><%= a[1] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

